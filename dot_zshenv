export XDG_CONFIG_HOME="$HOME/.config"
export HOMEBREW_NO_ANALYTICS=1

eval "$(/opt/homebrew/bin/brew shellenv)"

if (( $+commands[nvim] )); then
  export EDITOR='nvim'
  alias vim=nvim
fi

if (( $+commands[bat] )); then
  alias cat=bat
fi

if (( $+commands[duf] )); then
  alias df=duf
fi

if (( $+commands[dust] )); then
  alias tree=dust
fi
